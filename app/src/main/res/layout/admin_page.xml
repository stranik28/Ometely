<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211F1F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/red_top_background">

            <ImageButton
                android:layout_gravity="center"
                android:layout_marginStart="18sp"
                android:layout_width="35sp"
                android:layout_height="30sp"
                android:background="@drawable/exit1"
                android:onClick="logout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:fontFamily="@font/main_name"
                android:gravity="center"
                android:layout_marginStart="50sp"
                android:paddingBottom="9sp"
                android:text="@string/OMETELY"
                android:textColor="@color/white"
                android:textSize="38sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addDeliver"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51sp">

            <EditText
                android:id="@+id/PasswordTextD"
                android:layout_width="250sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="55sp"
                android:background="@drawable/add_log_and_pass_button"
                android:gravity="center"
                android:hint="Введите email"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/admin_plusD"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/plus_red"
                android:onClick="AdminClickD"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#767575"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addCook"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51sp">

            <EditText
                android:id="@+id/PasswordTextC"
                android:layout_width="250sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="55sp"
                android:background="@drawable/add_log_and_pass_button"
                android:gravity="center"
                android:hint="Введите email"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/admin_plusC"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/plus_red"
                android:onClick="AdminClickC"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#767575"
            android:layout_marginBottom="2sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addManager"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51sp">


            <EditText
                android:id="@+id/PasswordTextM"
                android:layout_width="250sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="55sp"
                android:background="@drawable/add_log_and_pass_button"
                android:gravity="center"
                android:hint="Введите email"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/admin_plusM"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/plus_red"
                android:onClick="AdminClickM"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#767575"
            android:layout_marginBottom="2sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AdminRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>