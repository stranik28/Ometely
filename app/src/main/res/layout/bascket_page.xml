<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:id="@+id/holaaa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@drawable/red_top_background">

        <ImageButton
            android:layout_gravity="center"
            android:layout_marginStart="18sp"
            android:layout_width="55sp"
            android:layout_height="50sp"
            android:background="@drawable/exit"
            android:onClick="logout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:fontFamily="@font/main_name"
            android:gravity="center"
            android:layout_marginStart="30sp"
            android:paddingBottom="9sp"
            android:text="@string/OMETELY"
            android:textColor="@color/white"
            android:textSize="38sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/basketCapsEn"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#8a0606"
        android:fontFamily="@font/test2"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_for_data_check"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fill_data_for_delivery"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:text="@string/phone_number"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_number"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/street"
                    android:layout_marginStart="2sp"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/street"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/house_full"
                    android:layout_marginStart="2sp"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"
                    android:layout_marginStart="2sp"
                    android:hint="@string/house"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/porch"
                    android:textColor="@color/black"
                    android:layout_marginStart="2sp"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/porch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/porch"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textColor="@color/black"
                    android:layout_marginStart="2sp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/level"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/room"
                    android:layout_marginStart="2sp"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/room"
                    android:backgroundTint="@color/red_for_text_like_a_top_red"/>


                <TextView
                    android:id="@+id/buyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="2sp"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/errorview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_for_text_like_a_top_red"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <Button
                    android:onClick="finish_check"
                    android:layout_gravity="center"
                    android:layout_width="200sp"
                    android:layout_height="25sp"
                    android:background="@drawable/button_login"
                    android:hint="Оформить заказ"
                    android:layout_marginTop="12sp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="8sp"/>

            </LinearLayout>
    </ScrollView>

</LinearLayout>