<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogPage"
    android:background="@drawable/back"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/red_top_background">

            <ImageButton
                android:layout_gravity="center"
                android:layout_marginStart="18sp"
                android:layout_width="35sp"
                android:layout_height="30sp"
                android:background="@drawable/exit1"
                android:onClick="logout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:fontFamily="@font/main_name"
                android:gravity="center"
                android:layout_marginStart="50sp"
                android:paddingBottom="9sp"
                android:text="@string/OMETELY"
                android:textColor="@color/white"
                android:textSize="38sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_marginStart="23sp"
                android:layout_marginEnd="23sp"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="115sp"
                    android:layout_height="110sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/pizza_type_one" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:text="Пепперони"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="Цена: 300 руб."/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:paddingStart="3sp"
                        android:paddingEnd="3sp"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="@string/Description_pepperoni"/>

                    <Button
                        android:id="@+id/PepperoniButton"
                        android:layout_width="90sp"
                        android:layout_height="23sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="8sp"
                        android:background="@drawable/mobile_sms_code_login"
                        android:hint="купить"
                        android:fontFamily="@font/lora_regular"
                        android:textColorHint="@color/white"
                        android:onClick="PepperoniClick"
                        android:paddingBottom="1sp"
                        android:textColor="@color/black"
                        android:textSize="10sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_marginStart="23sp"
                android:layout_marginEnd="23sp"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="115sp"
                    android:layout_height="110sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/pizza_type_two" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:text="@string/Calzone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="Цена: 380 руб."/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:paddingStart="3sp"
                        android:paddingEnd="3sp"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="@string/Description_calzone" />

                    <Button
                        android:id="@+id/Calzone"
                        android:layout_width="90sp"
                        android:layout_height="23sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="8sp"
                        android:background="@drawable/mobile_sms_code_login"
                        android:hint="купить"
                        android:fontFamily="@font/lora_regular"
                        android:textColorHint="@color/white"
                        android:onClick="CalzoneClick"
                        android:paddingBottom="1sp"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_marginStart="23sp"
                android:layout_marginEnd="23sp"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="115sp"
                    android:layout_height="110sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/pizza_type_three" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:text="@string/Quattro_stagioni"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="Цена: 300 руб."/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:paddingStart="3sp"
                        android:paddingEnd="3sp"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="@string/Description_quattro_stagioni" />

                    <Button
                        android:id="@+id/QuattroStagioni"
                        android:layout_width="90sp"
                        android:layout_height="23sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="8sp"
                        android:background="@drawable/mobile_sms_code_login"
                        android:hint="купить"
                        android:fontFamily="@font/lora_regular"
                        android:textColorHint="@color/white"
                        android:onClick="QuattroStagioniClick"
                        android:paddingBottom="1sp"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_marginStart="23sp"
                android:layout_marginEnd="23sp"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="115sp"
                    android:layout_height="110sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/pizza_type_four" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:text="@string/Quattro_formaggi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="Цена: 350 руб."/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:paddingStart="3sp"
                        android:paddingEnd="3sp"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="@string/Description_quattro_formaggi" />

                    <Button
                        android:layout_width="90sp"
                        android:layout_height="23sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="8sp"
                        android:background="@drawable/mobile_sms_code_login"
                        android:hint="купить"
                        android:fontFamily="@font/lora_regular"
                        android:textColorHint="@color/white"
                        android:onClick="QuattroFormaggiClick"
                        android:paddingBottom="1sp"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_marginStart="23sp"
                android:layout_marginEnd="23sp"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_back"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="115sp"
                    android:layout_height="110sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/pizza_type_five" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:text="@string/Mexican" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="Цена: 350 руб."/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:paddingStart="3sp"
                        android:paddingEnd="3sp"
                        android:fontFamily="@font/lora_regular"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="@string/Description_mexican" />

                    <Button
                        android:id="@+id/MexicanId"
                        android:layout_width="90sp"
                        android:layout_height="23sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="8sp"
                        android:background="@drawable/mobile_sms_code_login"
                        android:hint="купить"
                        android:fontFamily="@font/lora_regular"
                        android:textColorHint="@color/white"
                        android:onClick="MexicanClick"
                        android:paddingBottom="1sp"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="50sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/niz"
        android:layout_width="match_parent"
        android:layout_height="47sp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <ImageButton
            android:layout_marginTop="1sp"
            android:layout_marginStart="17sp"
            android:layout_gravity="center_vertical"
            android:layout_height="38sp"
            android:layout_width="48sp"
            android:onClick="goToBacket"
            android:background="@drawable/backet_one"/>

        <TextView
            android:id="@+id/TextDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/BusckeItem"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/bascet"
            android:textSize="34sp"/>


    </LinearLayout>

</RelativeLayout>