<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#211F1F"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/AnameD"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#2B2A2A"/>

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@drawable/stick_for_adapter"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"/>

        <TextView
            android:id="@+id/AphoneD"
            android:layout_width="117sp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#2B2A2A"/>

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@drawable/stick_for_adapter"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"/>



        <TextView
            android:id="@+id/ApizzaOrAadressD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="#2B2A2A"
            android:paddingStart="3sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3sp"/>

    <TextView
        android:id = "@+id/Aprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#2B2A2A"
        android:textColor="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:background="#211F1F"/>
</LinearLayout>